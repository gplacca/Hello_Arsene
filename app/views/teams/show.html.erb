  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class ="row row-modal">
          <div class ="col col-modal-picture">
            <div class="modal-picture">
            </div>
          </div>
          <div class ="col col-modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Ajouter ma séance</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@team, @training] do |f| %>
            <div class="form-group string optional training_name">
              <label class="string optional" for="training_name">Nom de la séance</label>
              <input class="form-control string optional" type="text" name="training[name]" id="training_name">
            </div>
            <div class="form-group string optional training_start_at">
              <label class="string optional" for="training_start_at">Date de la séance</label>
              <input class="form-control string optional datepicker flatpickr-input" type="text" name="training[start_at]" id="training_start_at" readonly="readonly">
            </div>

            <%= f.input :duration_in_minutes, as: "range", label: "Durée en minutes: 60", required: false, input_html: { min: '0', step: '5', max: '240', id: 'input_training_duration_in_minutes'}, label_html: {id: "label_training_duration_in_minutes"} %>

            <%= f.submit "Créer", class: "btn btn-success rounded btn-lg button-trainings" %>
          <% end %>
        </div>
      </div>
